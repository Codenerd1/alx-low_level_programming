CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	@/bin/rm -f *~ $(NAME)

oclean:
	@/bin/rm -f $(OBJ)

fclean: clean oclean
	@/bin/rm -f $(NAME)

re: fclean all

%.o: %.c m.h
	$(CC) -c -o $@ $< $(CFLAGS)
