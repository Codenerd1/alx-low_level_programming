CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
	NAME = school
	RM = rm -f
	CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ)
	$(RM) *~

oclean: clean

fclean: clean
	$(RM) $(NAME)

re: fclean all
